<div id="<%= article._id.$oid%>" class="card image" data-toggle="modal" data-target="#newsModal-<%= article._id.$oid%>" >
    <img class="card-image" alt="Card image cap" src="../../../assets/images/<%= article.newsImg%>" >
    <div class="card-body">
        <h5 class="card-title"><%= article.newsTitle%></h5>
