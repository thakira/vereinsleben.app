<nav class="navbar sticky-top navbar-dark bg-primary modal-nav">
    <div class="container-left">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span class="material-icons">close</span>
        </button>
        <h3>Profilbild ändern</h3>
    </div>
    <button id="saveProfilImage" type="button" class="close btn">
        <span class="material-icons">check</span>
    </button>
</nav>

<div class="modal-body">
    <div class="imageContainer " style="margin: 2em auto;">
        <img id="profilbild" src="<%= (user.img) ? user.img : '' %>" alt="your image" />
    </div>
    <form action="/profilimage" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <fieldset class="form-group col">
                <label for="profilbildInput" class="btn btn-outline-light">Bild auswählen</label>
                <input id="profilbildInput" name="image" type="file" accept="image/*">
            </fieldset>
        </div>
        <button type="submit" class="btn waves-effect waves-light btn-large hidden">Hochladen</button>
    </form>
</div>