<div class="modal-body">
    <div id="addNewsEditorContainer">

        <form action="/addNews">

            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="newsTypeOptions" id="newsTypeText" value="text" checked>
                    <label class="form-check-label" for="newsTypeText">Text-Beitrag</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="newsTypeOptions" id="newsTypeImage" value="image">
                    <label class="form-check-label" for="newsTypeImage">Beitrag mit Bild</label>
                </div>
                <small id="newsTypeHelpBlock" class="form-text text-muted">
                    Bei einem <em>Beitrag mit Bild</em> wird ein Titel-Bild im Format 16:9 eingefügt.
                </small>
            </div>

            <div class="form-group">
                <input type="text" class="form-control form-control-lg" id="headerInput" placeholder="Überschrift" required>
            </div>

            <div class="form-group">
                <textarea class="form-control" id="newsText" required></textarea>
            </div>

            <div class="form-group">
                <!-- Datei hochladen-->
                <div class="custom-file">
                    <input type="file" class="custom-file-input " id="customFile" lang="de">
                    <label class="custom-file-label" for="customFile">Lade eine Datei hoch...</label>
                    <small>Lade optional ein Dokument hoch (z.B. Plakat, Anmeldeformular)</small>
                </div>
            </div>

            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="publishNews">
                <label class="custom-control-label" for="publishNews">Veröffentlichen</label>
            </div>

            <button type="submit" class="btn btn-primary">Primary</button>


        </form>

    </div>
</div>
<div class="modal-footer">
</div>


<script src="https://cdn.tiny.cloud/1/zyqy6bq7l0jcdzh89nk09o0jurkuy5e8anxya0zqq0a9ir24/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: "textarea#newsText",
        skin: "bootstrap",
        plugins: "lists, link, image, media",
        toolbar:
            "h1 h2 bold italic blockquote bullist numlist backcolor | link image media | removeformat help",
        menubar: false,
        language:'de',
        setup: editor => {
            // Apply the focus effect
            editor.on("init", () => {
                editor.getContainer().style.transition =
                    "border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out";
            });
            editor.on("focus", () => {
                (editor.getContainer().style.boxShadow =
                    "0 0 0 .2rem rgba(10,82,19, .25)"),
                    (editor.getContainer().style.borderColor = "#0a5213");
            });
            editor.on("blur", () => {
                (editor.getContainer().style.boxShadow = ""),
                    (editor.getContainer().style.borderColor = "");
            });
        }
    });

</script>

<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function() {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>